<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6E6"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/text_component_app_name"
        android:layout_width="68dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="앱 이름"
            android:textColor="#000000" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_component_alarm"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:src="@drawable/octicon_bell_24"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/Weekly_Menu"
        android:layout_width="370dp"
        android:layout_height="721dp"
        android:layout_marginTop="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="721dp"
            android:src="@drawable/rectangle_5_edited"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="주간 식단표"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000" />
    </FrameLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="650dp"
        app:layout_constraintLeft_toLeftOf="@id/Weekly_Menu"
        app:layout_constraintTop_toTopOf="@id/Weekly_Menu"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/Weekly_Menu_Monday"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:src="@drawable/rectangle_6_edited"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="월요일"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">
                    <ListView
                        android:id="@+id/Weekly_Menu_Monday_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/Weekly_Menu_Tuesday"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:src="@drawable/rectangle_6_edited"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="화요일"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">
                    <ListView
                        android:id="@+id/Weekly_Menu_Tuesday_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/Weekly_Menu_Wednesday"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:src="@drawable/rectangle_6_edited"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="수요일"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">
                    <ListView
                        android:id="@+id/Weekly_Menu_Wednesday_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/Weekly_Menu_Thursday"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:src="@drawable/rectangle_6_edited"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="목요일"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">
                    <ListView
                        android:id="@+id/Weekly_Menu_Thursday_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/Weekly_Menu_Friday"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:src="@drawable/rectangle_6_edited"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="금요일"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">
                    <ListView
                        android:id="@+id/Weekly_Menu_Friday_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangles4"
        android:layout_width="412dp"
        android:layout_height="97dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/rec4_background"
            android:layout_width="412dp"
            android:layout_height="97dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/rectangle_3_edited"/>
        <ImageView
            android:id="@+id/rec4_inner1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/mingcute_menu_line"/>
        <ImageView
            android:id="@+id/rec4_inner2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/iconamoon_home_light"/>
        <ImageView
            android:id="@+id/rec4_inner3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:src="@drawable/lets_icons_back"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
